{
  "include": [
    "src/main/**/*"
  ],
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "baseUrl": "src/main",
    "paths": {
      "@config": [
        "config/index"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  }
}
